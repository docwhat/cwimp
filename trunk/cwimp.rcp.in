ALERT ID About_Info
HELPID HelpAbout
INFORMATION
BEGIN
	TITLE "About"
	MESSAGE "CWimp\n" \
	"Version: $VERSION\n" \
	"\n" \
# \366 is umlaut 'o'
# \251 is the copyright symbol
	"\251 1999-$YEAR\n" \
	"Steve Schwartz\nChristian H\366ltje\n\n" \
	"Please press the 'i' for more info\n"
	BUTTONS "Done" 
END

