FORM ID frmGetNames AT (2 2 156 156)
MODAL
HELPID HelpGetNames
SAVEBEHIND
BEGIN
	TITLE "Set Player Names"
	LABEL "Set the Player's Names" ID AUTOID AT (15 15) FONT 1

# Another one of my loops to make life easier
FIXVER: LOOP 0 9
	LABEL "$LOOPPLUSONE:" ID GnameL$LOOP AT (10 PREVBOTTOM)
    FIELD ID GnameP$LOOP AT (30 PREVTOP 110 11) UNDERLINED MAXCHARS 32 AUTOSHIFT
FIXVER: LOOP END

    BUTTON "OK"   ID btn_OK_frmGetNames AT (5 PREVBOTTOM+5 AUTO 12)  FRAME FONT 1
    BUTTON "Back" ID AUTOID3            AT (PREVRIGHT+8 PREVTOP AUTO 12) FRAME FONT 0
	GRAFFITISTATEINDICATOR AT (140 PREVTOP)
END


